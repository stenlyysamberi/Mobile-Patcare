<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/pilih_foto"
    android:background="@drawable/botton_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_header"
            android:textStyle="bold"
            android:textColor="@color/textCOlor"
            android:textSize="20dp"
            android:text="Ganti foto profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:drawableTint="@color/textCOlor"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_baseline_add_photo_alternate_24"
            android:layout_marginTop="20dp"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:textSize="15dp"
            android:textColor="@color/textCOlor"
            android:text="Pilih dari galeri"
            android:layout_below="@+id/text_header"
            android:id="@+id/pilih_foto_galeri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>