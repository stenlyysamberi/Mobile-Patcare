<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_menu"
    android:padding="20dp"
    android:background="@drawable/botton_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dash"
        android:layout_centerHorizontal="true"
        android:background="@color/textCOlor"
        android:layout_marginTop="12dp"
        android:layout_width="20dp"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/layanana_lain"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/dash"
        android:textColor="@color/textCOlor"
        android:text="Layanan lainnya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:gravity=""

        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layanana_lain"
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/menu_my_pat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/pat" />

            <TextView
                android:layout_gravity="center"

                android:gravity="center_horizontal"
                android:textColor="@color/textCOlor"
                android:text="My Pat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/medical"
                android:layout_gravity="center"
                android:src="@drawable/medical"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_gravity="center"
                android:textColor="@color/textCOlor"
                android:text="Medical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/chat_activiy"
                android:layout_gravity="center"
                android:src="@drawable/suntik"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="@color/textCOlor"
                android:text="Chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/go_balai"
                android:layout_gravity="center"
                android:src="@drawable/bola"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:layout_gravity="center"
                android:textColor="@color/textCOlor"
                android:text="Balai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/keluar"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <TextView
                android:id="@+id/keluar"
                android:layout_gravity="center"
                android:textColor="@color/textCOlor"
                android:text="Log out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>










</RelativeLayout>