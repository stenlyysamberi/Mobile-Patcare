<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_menu"
    android:padding="20dp"
    android:background="@drawable/botton_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/dash"
        android:layout_centerHorizontal="true"
        android:background="@color/textCOlor"
        android:layout_marginTop="12dp"
        android:layout_width="20dp"
        android:layout_height="1dp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/layanana_lain"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/dash"
        android:textColor="@color/textCOlor"
        android:text="Layanan lainnya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/layanana_lain"
        android:id="@+id/menu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginRight="20dp"
            android:drawableTint="@color/textCOlor"
            android:drawableTop="@drawable/ic_baseline_person_outline_24"
            android:textColor="@color/textCOlor"
            android:text="Profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginRight="20dp"
            android:drawableTint="@color/textCOlor"
            android:drawableTop="@drawable/ic_baseline_text_snippet_24"
            android:textColor="@color/textCOlor"
            android:text="Builde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="20dp"
            android:drawableTint="@color/textCOlor"
            android:drawableTop="@drawable/ic_baseline_medical_services_24"
            android:textColor="@color/textCOlor"
            android:text="Medical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginRight="20dp"
            android:drawableTint="@color/textCOlor"
            android:drawableTop="@drawable/ic_baseline_bubble_chart_24"
            android:textColor="@color/textCOlor"
            android:text="Chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:drawableTop="@drawable/ic_baseline_local_hospital_24"
            android:drawableTint="@color/textCOlor"
            android:text="PLTD"
            android:textColor="@color/textCOlor" />



        <TextView
            android:id="@+id/keluar"
            android:onClick="keluar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_baseline_login_24"
            android:drawableTint="@color/textCOlor"
            android:text="Log out"
            android:textColor="@color/textCOlor" />
    </LinearLayout>




</RelativeLayout>