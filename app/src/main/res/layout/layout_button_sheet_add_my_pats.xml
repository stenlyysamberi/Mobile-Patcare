<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bottomSheetAddPats"
    android:background="@drawable/botton_sheet"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_margin="12dp"
            android:background="@color/textCOlor"
            android:layout_gravity="center_horizontal"
            android:layout_width="30dp"
            android:layout_height="2dp"/>

        <TextView
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textColor="@color/textCOlor"
            android:textSize="30dp"
            android:text="My Pats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:textColorHint="@color/hit"
            android:id="@+id/nama_hewan"
            android:layout_marginTop="20dp"
            android:background="@drawable/forget"
            android:textColor="@color/textCOlor"
            android:hint="Nama Hewan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <Spinner
            android:id="@+id/jenis_hewan"
            android:entries="@array/jenis"
            android:layout_marginTop="12dp"
            android:background="@drawable/forget"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/tlg_lahir"
                android:textColor="@color/textCOlor"
                android:textColorHint="@color/hit"
                android:hint="Tanggal Lahir"
                android:background="@drawable/forget"
                android:layout_width="220dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:textColorHint="@color/hit"
                android:id="@+id/umur"
                android:textAlignment="center"
                android:layout_marginLeft="12dp"
                android:textColor="@color/textCOlor"
                android:hint="20"
                android:background="@drawable/forget"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <Button
            android:id="@+id/bnt_add_pats"
            android:textColor="@color/white"
            android:background="@drawable/btn_chat"
            android:layout_marginTop="20dp"
            android:padding="12dp"
            android:text="add"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>