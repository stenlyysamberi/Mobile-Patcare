<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">


    <TextView

        android:textStyle="bold"
        android:id="@+id/secondtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="12px"
        android:text="PatCare"
        android:textColor="@color/teal_700"
        android:textSize="40dp">

    </TextView>

    <TextView
        android:visibility="invisible"
        android:id="@+id/pesanKoneksi"
        android:textColor="@color/red"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:textAlignment="center"
        android:textSize="15dp"
        android:text="Cek koneksi Wifi atau kuota internetmu dan coba laga ya."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_toStartOf="@id/pesanKoneksi"
        android:layout_toRightOf="@+id/pesanKoneksi"
        android:layout_alignParentBottom="true"
        android:text="Pengaturan"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:indeterminateDrawable="@drawable/progres_style"
        android:padding="30dp" />


</RelativeLayout>